<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Layout.css")
    @RenderSection("styles", required: false) 
    @Styles.Render("~/Content/themes/base/jquery-ui.css")
    @Styles.Render("~/Content/autocompleteBringToFront.css")
    @Scripts.Render("~/bundles/modernizr")  


</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img class="mg-auction-logo" height="50" src="@Url.Content("~/Content/images/logo.jpg")" />
                </div>

                <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Lot")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @Html.Action("Menu", "Nav")
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Create lot", "Create", "Lot")</li>
                    </ul>
                    @Html.Action("Search", "Nav")
                    @Html.Partial("_LoginPartial")
                </div><!--/.nav-collapse -->
            </div>
        </div>
    <br />
    <br />   
    <br />  
    <br />
    <br /> 
    <br /> 
    <div class="container">
        @RenderSection("Carousel", required: false)   
        <br />
        <br />     
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">

                @RenderBody()

            </div>
        </div>
    </div>
    
    <div class="container">
        <hr>
        <footer>
            <p>&copy; @DateTime.Now.Year - Epam Asp.Net Mvc Training. Website developed by Kaplin Sergey</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")    
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function () {
            var autocompleteUrl = '@Url.Action("Autocomplete","Nav")';
            $("input#lot").autocomplete({
                source: autocompleteUrl,
                minLength: 2,
                select: function (event, ui) {
                    $(this).val(ui.item.value);
                    $("#findBtn").click();
                }
            });
        });
    </script>    
</body>
</html>

