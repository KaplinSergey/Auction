@model IList<MvcPL.ViewModels.CategoryViewModel>
<div class="col-xs-12 col-sm-12 col-md-12">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->

        @if(Model.Count!=0)
        {
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < Model.Count; i++ )
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>
            }
        </ol>
         }
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @if(Model.Count!=0)
            { 
            <div class="item active">
                <a href=@Url.RouteUrl(null, new {category = Model[0].Name})>
                    <img src=@Url.Action("GetImage", "Nav", new { id = Model[0].Id }) alt="@Model[0].Name">
                </a>
            </div>

            for (int i = 1; i < Model.Count; i++ )
            {
   
            <div class="item">
                <a href=@Url.RouteUrl(null, new {category = Model[i].Name})>
                    <img src=@Url.Action("GetImage", "Nav", new { id = Model[i].Id }) alt="@Model[i].Name">
                </a>
            </div>
    
            }
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>