@model IEnumerable<MvcPL.ViewModels.PurchaseViewModel>
<div>
@if (Model.Count() != 0)
    {
    <table class="table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Purchase date</th>
                <th>Start lot price</th>
                <th>Purchase price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.LotName</th>
                    <th>@item.Description</th>
                    <th>@item.Date</th>
                    <th>@item.StartPrice</th>
                    <th>@item.PurchasePrice</th>
                </tr>
            }
        </tbody>
    </table>
}
</div>