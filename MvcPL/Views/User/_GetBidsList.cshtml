@model IEnumerable<MvcPL.ViewModels.BidViewModel>
<div>
    @if (Model.Count() != 0)
    { 
    <table class="table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Lot name</th>
                <th>Date</th>
                <th>Price</th>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.ActionLink(item.LotName, "LotDetails", "Lot", new { id = item.LotId }, null)</th>
                    <th>@item.Date</th>
                    <th>@item.Price</th>
                </tr>
            }
        </tbody>
    </table>
    }
</div>