@model IEnumerable<MvcPL.ViewModels.LotViewModel>
 <div>
@if (Model.Count() != 0)
    {
     <table class="table table-striped">
         <thead>
             <tr>
                 <th>Name</th>
                 <th>Description</th>
                 <th>Start date</th>
                 <th>Time until end</th>
                 <th>Start price</th>
                 <th>Current price</th>
             </tr>
         </thead>
         <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <th>@item.Name</th>
                     <th>@item.Description</th>
                     <th>@item.StartDate</th>
                     <th>@item.TimeUntilEnd.ToString(@"dd\:hh\:mm")</th>
                     <th>@item.StartPrice</th>
                     <th>@item.CurrentPrice</th>
                     <th>@Html.ActionLink("Edit", "Edit", "Lot", new { lotId = item.Id }, new { @class = "btn btn-warning" })</th>
                     <th>@Html.ActionLink("Delete", "Delete", "Lot", new { lotId = item.Id }, new { @class = "btn btn-danger" })</th>
                 </tr>
             }
         </tbody>
     </table>
}
 </div>