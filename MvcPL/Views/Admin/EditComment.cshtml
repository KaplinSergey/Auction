@model MvcPL.ViewModels.CommentViewModel
@{
    ViewBag.Title = "EditComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditComment", "Admin", new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">       
        @Html.AntiForgeryToken()
        @Html.HiddenFor(c => c.Id)
        @Html.TextAreaFor(c => c.Text, new { @class = "form-control", row = "5" })
        @Html.ValidationMessageFor(c => c.Text, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
            <button type="submit" class="btn btn-primary">
              Edit Commentary
            </button>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}