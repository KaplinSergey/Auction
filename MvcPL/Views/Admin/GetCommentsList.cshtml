@model IEnumerable<MvcPL.ViewModels.CommentViewModel>
@{
    ViewBag.Title = "GetCommentsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>@ViewBag.TimeSpan</h2>
@if (Model.Count() != 0)
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Commentary</th>           
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Date</td>
                <td>@comment.UserName</td>
                <td>@comment.Text</td>  
                <th>@Html.ActionLink("Edit", "EditComment", "Admin", new { commentId = comment.Id }, new { @class = "btn btn-warning" })</th>
                <th>@Html.ActionLink("Delete", "DeleteComment", "Admin", new { commentId = comment.Id }, new { @class = "btn btn-danger" })</th>              
            </tr>
        }
    </tbody>
</table>
}

